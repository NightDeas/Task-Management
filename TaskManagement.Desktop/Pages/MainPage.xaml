<Page x:Class="TaskManagement.Desktop.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManagement.Desktop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <WrapPanel>
            <Button Content="Проекты" x:Name="ProjectBtn" Click="ProjectBtn_Click" Style="{StaticResource DefaultButton}"></Button>
            <Button Content="Сотрудники" x:Name="EmployeeBtn" Click="EmployeeBtn_Click" Style="{StaticResource DefaultButton}"></Button>
            <Button Content="Статистика" x:Name="StatisticsBtn" Click="StatisticsBtn_Click" Style="{StaticResource DefaultButton}"></Button>
        </WrapPanel>
        <Frame Margin="5" Grid.Row="1" x:Name="Frame"></Frame>
    </Grid>
</Page>
